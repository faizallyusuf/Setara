<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="top|center_horizontal"
    android:background="@color/white">

    <!-- Image Section -->
    <ImageView
        android:id="@+id/aboutUsImage"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/about_us_image"
        android:src="@drawable/profile"
        android:background="@drawable/circle_background"
        android:padding="8dp"
        tools:ignore="ImageContrastCheck" />

    <!-- Title Section -->
    <TextView
        android:id="@+id/aboutUsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="@string/about_us_title"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#2E3A59" />

    <!-- Description Section -->
    <TextView
        android:id="@+id/aboutUsDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:lineSpacingExtra="6dp"
        android:text="@string/about_us_description"
        android:textSize="16sp"
        android:textColor="#4F5B77"
        tools:ignore="VisualLintLongText" />

</LinearLayout>
